<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net461;net6</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="fiskaltrust.interface" Version="1.3.1" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="1.1.1" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.4" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\fiskaltrust.Middleware.SCU.DE.Helpers.TLVLogParser\fiskaltrust.Middleware.SCU.DE.Helpers.TLVLogParser.csproj" />
    </ItemGroup>
    <ItemGroup>
        <_Licenses Include="$(SolutionDir)/LICENSES/**" />
    </ItemGroup>
    <Target Name="CopyLicensesOnPublish" AfterTargets="Publish">
        <Copy SourceFiles="@(_Licenses)" DestinationFolder="$(PublishDir)/LICENSES" />
    </Target>

    <ItemGroup>
        <None Include="@(NativeLibs)" Pack="true" PackagePath="runtimes" Visible="true" CopyToOutputDirectory="Preserve" />
    </ItemGroup>
</Project>
