  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="fiskaltrust.interface" Version="1.3.1" />
    <PackageReference Include="fiskaltrust.Middleware.Abstractions" Version="1.3.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="3.1.4" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../fiskaltrust.Middleware.SCU.DE.Swissbit.Interop.DynamicLib/fiskaltrust.Middleware.SCU.DE.Swissbit.Interop.DynamicLib.csproj" />
